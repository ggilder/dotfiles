#!/bin/sh

if [ "$1" != "" ]  #if parameter exists, use as base folder
   then cd "$1"
   fi
pwd
# ignore dotfiles
find . -not -regex '.*/\..*' |   \
   sed -e 's/[^-][^\/]*\//--/g' -e 's/-/|/'
# replace higher level folder names with dashes
# replace first dash with a vertical bar

if [ `ls -F -1 | grep "/" | wc -l` = 0 ]   # check if no folders
   then echo "   -> no sub-directories"
   fi
echo
exit